# Environment Variables for AIAgents4Pharma - Talk2KnowledgeGraphs
# Copy this file to .env and modify as needed

# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Nvidia API Key (optional)
NVIDIA_API_KEY=your_nvidia_api_key_here

# LangSmith API Key (optional for tracing)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langchain_api_key_here

# Milvus Server Connection
MILVUS_HOST=localhost
MILVUS_PORT=19530

# Milvus Authentication
MILVUS_USER=root
MILVUS_PASSWORD=Milvus

# Database Configuration
MILVUS_DATABASE=t2kg_primekg

# Data directory for multimodal data (optional)
# DATA_DIR=/path/to/your/data/directory

# Batch size for data processing
BATCH_SIZE=500
